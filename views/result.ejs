<!DOCTYPE html>
<html lang="zh">
<head>
    <%- include('_partial/head', {title: '查询结果'}); %>

    <style>
        @media (max-width: 768px) {
            .four-char-width {
                width: 4em;
            }
        }
        .large-padding-top {
            padding-top: 120px;
        }
    </style>
</head>
<body>
    <% if(typeof message !== 'undefined' && message) { %>
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span>&times;</span></button>
        <!-- 提示信息 -->
        <strong>信息</strong> <%= message %>
    </div>
    <% } %>
    <div class="container">
    <table class="table table-hover">
        <caption>
        <h1 class="text-center">成绩认定记录</h1>
        <form>        
            <div class="form-group">        
                <div class="col-sm-10">
                    <%- include('_partial/date-picker', typeof date !== 'undefined' ? {date: date} : {}) %>
                </div>
            </div>
            <div class="form-group"> 
                <div class="col-sm-2">
                    <a id="query" href="" class="btn btn-info form-control">查询</a>
                </div>
            </div>

            <script>
                $(function() {
                    $('#query').click(function() {
                        this.href = $('#date-picker').val();
                    });
                });
            </script>
        </form>
        </caption>
        <thead>
        <tr>
            <th>课程名称</th>
            <th class="four-char-width">学分</th>
            <th class="four-char-width">类型</th>
            <th class="four-char-width">分数</th>
        </tr>
        </thead>
        <tbody>
        <% for(let item of result.transcript) { %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.credit %></td>
            <td><%= item.type %></td>
            <td><%= item.score %></td>
        </tr>
        <% } %>
        </tbody>
    </table>
    
    <a href="/" class="pull-right">回到首页</a>    
    
    </div>

    <footer class="large-padding-top">
    <div class="container">        
        <p class="small">项目地址：<a href="https://github.com/Chocolatl/jvtc-transcript">https://github.com/Chocolatl/jvtc-transcript</a></p>
        <p class="small">Chocolatl, 2017.6.28</p>
    </div>
    </footer>
</body>
</html>