<!DOCTYPE html>
<html lang="zh">
<head>
    <%- include('_partial/head', {title: '查询结果'}); %>

    <style>
        @media (max-width: 768px) {
            .four-char-width {
                width: 4em;
            }
        }
    </style>
</head>
<body>
    <%- include('_partial/message', {message: message}) %>
    
    <div class="container">
    <table class="table table-hover">
        <caption>
        <h1 class="text-center" style="margin-bottom: 1em;">成绩认定记录</h1>
        <form>
            <div class="row">            

                <div class="col-sm-10">
                <div class="form-group">        
                    <%- include('_partial/date-picker', typeof date !== 'undefined' ? {date: date} : {date: ''}) %>
                </div>
                </div>

                <div class="col-sm-2">
                <div class="form-group"> 
                    <a id="query" href="" class="btn btn-info form-control">查询</a>
                </div>
                </div>

            </div>

            <script>
                window.onload = function() {
                    document.getElementById('query').onclick = function() {
                        location.href = document.getElementById('date-picker').value;
                        return false;
                    }
                }
            </script>
        </form>
        </caption>
        <thead>
        <tr>
            <th>课程名称</th>
            <th class="four-char-width">学分</th>
            <th class="four-char-width">类型</th>
            <th class="four-char-width">分数</th>
        </tr>
        </thead>
        <tbody>
        <% for(let item of result.transcript) { %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.credit %></td>
            <td><%= item.type %></td>
            <td><%= item.score %></td>
        </tr>
        <% } %>
        </tbody>
    </table>
    
    <a href="/" class="pull-right" style="margin-bottom: 20px;">注销登录</a>    
    
    </div>

</body>
</html>